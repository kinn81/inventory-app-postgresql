<h1><%=pageTitle%></h1>
<ul class="nav-menu">
  <% games.forEach(game => { %>
  <h3><%=game.name%></h3>
  <p><%=game.description%></p>
  <div>
    <form
      action="/game/<%=game.id%>/update"
      method="GET"
      style="display: inline"
    >
      <button type="submit">Update</button>
    </form>
    <form
      action="/game/<%=game.id%>/delete"
      method="POST"
      style="display: inline"
    >
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this game?')"
      >
        Delete
      </button>
    </form>
  </div>
  <%})%>
</ul>
<a href="/games/new">Add a new game</a>
